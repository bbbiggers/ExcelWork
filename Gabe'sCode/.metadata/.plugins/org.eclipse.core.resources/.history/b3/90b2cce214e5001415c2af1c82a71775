package Warmups;

public class BtoS {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		String a = "bats";
		System.out.println(BtoS(a));
		
	}

	public static String BtoS(String a){
	String answer = "";
	if(a.contains("b")||a.contains("B")){
	int b = a.indexOf("b");
	int c = a.indexOf("B");
	if(b!=-1){
	String x = a.substring(b,b+1);
	x = "s";
	String y = a.substring(b+1);
	answer = x+y;
	}
		return answer;
	}else{
	return a;
		
	}
	
}
}