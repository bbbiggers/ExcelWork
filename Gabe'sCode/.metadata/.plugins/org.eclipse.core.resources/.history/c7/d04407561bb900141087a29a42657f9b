package Warmups;

public class recursiveevens {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
int n = 7;
System.out.println(sumEvens(n));
	}
public static int sumEvens(int n){
	int ans = 0;
	
	if (n == 0){
		return 0;
	}else{
		
	if (n%2 == 0){
		n+=n;
		return sumEvens(n-1);
	}else{
		n-=n;
		return sumEvens(n-1);
	}
	
	
	}
}
}
