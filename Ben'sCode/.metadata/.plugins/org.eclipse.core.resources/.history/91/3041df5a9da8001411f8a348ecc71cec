package Spread;

public class Cells {
	private int N;
	private String[][] Sheet;
	public Cells(String[][] Sheat, int A) {
		Sheet = Sheat;
		N = A;
	}
	
	public static void Cel(int N) {
		String Liner = "";
		
		if(N == 10) {
			N = N-1;
			for(int j = 0; j < 7; j++) {
				Liner = Liner+Sheet[N][j]+"|"; 
			}
			System.out.print("     10     |"+Liner+"\n");
		}
		else {
			for(int j = 0; j < 7; j++) {
				Liner = Liner+Sheet[N][j]+"|"; 
			}
			System.out.print("     "+N+"      |"+Liner+"\n");
		}
		
		Line(0);
	}
}